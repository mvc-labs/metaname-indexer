{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"alwaysStrict": true,
		"strictNullChecks": true,
		"noImplicitAny": false,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "pretty": true,
		"allowJs": true,
		"skipLibCheck": true,
		"outDir": "compiled",
		"rootDir": "./",
		"lib": [
      "es2020"
    ]
	},
	"include": ["src/**/*", "config/*"],
	"exclude": ["node_modules"]
}
